extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
 
      h1 <strong>Davey's Digital Digest</strong>
 
      p.lead.text-light
        | Check out my collection of JavaScript, PHP, and Python projects!
  article.grid-container.portfolio-index
    h3(style="text-decoration:underline") JavaScript
    br
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in JavaScriptProjectList
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/img/project-id-${project.id}/screen-shot-01.png`)
            h5= project.title
    br
    br
    h3(style="text-decoration:underline") PHP
    br
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in PHPProjectList
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/img/project-id-${project.id}/screen-shot-01.png`)
            h5= project.title
    br
    br
    h3(style="text-decoration:underline") Python
    br
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in PythonProjectList
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/img/project-id-${project.id}/screen-shot-01.png`)
            h5= project.title
