extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= name

        p.lead.text-light= description


      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in technologies
            li= technology

        if live_link
          a.button.expanded(href=live_link, target='_blank') Live Demo
        a.button.expanded(href=github, target='_blank') GitHub Repo
    
    br
    img.image(src=`/static/img/project-id-${id}/screen-shot-01.png`)
    br
    img.image(src=`/static/img/project-id-${id}/screen-shot-02.png`)
    br
    img.image(src=`/static/img/project-id-${id}/screen-shot-03.png`)